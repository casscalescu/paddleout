<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class="navbar__brand">
      <i class="fas fa-water"></i>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="navbar__item">
          <%= link_to "Post a board", new_surfboard_path %>
        </li>
        <li class="navbar__item">
          <%= link_to "Home", root_path %>
        </li>
        <li class="navbar__item dropdown">
          <% if current_user.photo.attachment.nil? %>
            <%= image_tag "avatar.png", alt: "Avatar", width: 200, class: "avatar avatar--small dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="navbar__item">
          <%= link_to "Post a surfboard", new_surfboard_path %>
        </li>
        <li class="navbar__item">
          <%= link_to "Sign in", new_user_session_path %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
