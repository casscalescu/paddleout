<div class="d-flex">
  <div class="col-12 col-sm-6 col-lg-7 row mr-1">
    <div class="cards-container row">
      <% @surfboards.each do |surfboard| %>
        <div class="card col-12 col-lg-6 col-xl-4">
          <%= cl_image_tag surfboard.photo.key, :style => "height: 260px; width: 100%; object-fit: cover" %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to surfboard.name, surfboard_path(surfboard), class: "stretched-link" %>
            </h5>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="map-box col-12 col-sm-6 col-lg-5"
  id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
