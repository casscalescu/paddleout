<div class="d-flex">
  <div class="col-12 col-sm-6 col-lg-7 row mr-1" data-aos="fade-right" data-aos-duration="1000">
    <div class="cards-container row">
      <% @surfboards.each do |surfboard| %>
        <div class="card card__index col-12 col-lg-6 col-xl-4">
          <%= link_to surfboard_path(surfboard) do %>
            <%= cl_image_tag surfboard.photo.key, style: "height: 260px; width: 100%; object-fit: cover; margin-bottom: 12px;" %>
            <h5><%= surfboard.name %> by <%= surfboard.brand %></h5>
            <p style="font-weight: 100;"><%= surfboard.brand %></p>
            <p>$<%= surfboard.price %> / day</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="map-box col-12 col-sm-6 col-lg-5"
  id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
