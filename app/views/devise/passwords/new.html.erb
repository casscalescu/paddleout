<div class="form">
  <h1>Forgot your password?</h1>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { class: "form__input"},
                label_html: { class: "form__label"},
                wrapper_html: { class: "form__wrapper"} %>
    <%= f.button :submit, "Reset password", class: "btn btn-primary w-100" %>
  <% end %>
  <div class="form__links">
    <%= render "devise/shared/links", class: "link" %>
  </div>
</div>
