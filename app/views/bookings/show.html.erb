<div class="container text-center">
  <h1>Booking:</h1>
  <div class="row">
    <div class="col-6 m-auto">
      <div class="card">
        <p><strong>Rented by: </strong><%= @booking.user.username %></p>
        <p><strong>Owned by: </strong><%=@booking.surfboard.user.username %></p>
        <p><strong>Booked from </strong><%= @booking.start_date.to_formatted_s(:short) %> to <%= @booking.end_date.to_formatted_s(:short) %></p>
        <p><strong>Total Price: </strong><%= number_to_currency(@booking.total_price, precision: 0) %></p>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to "< Back", :back, class: "link" %>
  </div>
</div>
